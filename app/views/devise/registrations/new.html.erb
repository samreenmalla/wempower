<div class="w-50 mx-auto">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "text-center border border-light p-5"}) do |f| %>
  <%= devise_error_messages! %>

  <p class="h4 mb-4">Sign up</p>

  <div class="form-row mb-4">
    <div class="col">
      <div class="field">
        <%= f.label :FirstName %><br />
        <%= f.text_field :firstname, autofocus: true, class: 'form-control' %>
      </div>
    </div>
    <div class="col">
      <div class="field">
        <%= f.label :LastName %><br />
        <%= f.text_field :lastname, autofocus: true, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      </div>
    </div>
  </div>


  <div class="row">
    <div class="col-md-12">
      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="field">
        <%= f.label :RollNumber %><br />
        <%= f.text_field :roll_number, autofocus: true, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="field">
        <%= f.label :Faculty %><br />
        <%= f.select :faculty, ['BCSIT','SNC','BCE','BEX'], {}, {prompt: 'Select Faculty', autofocus: true, class: 'form-control'} %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="field">
        <%= f.label :Batch %><br />
        <%= f.select :batch, ['071','072','073','074'], {}, { prompt: 'Select Batch', autofocus: true, class: 'form-control'} %>
      </div>
    </div>
  </div>


  <div class="row">
    <div class="col-md-12">
      <div class="field">
        <%= f.label :PhoneNumber %><br />
        <%= f.text_field :phone_number, autofocus: true, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="field">
        <%= f.label :Address %><br />
        <%= f.text_field :address, autofocus: true, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-info my-4 btn-block" %>
  </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
